# Production Environment Configuration Template
# Copy this to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=3000
API_URL=https://api.yourdomain.com

# Database Configuration (Use connection pooling in production)
DATABASE_URL="postgresql://rfquser:STRONG_PASSWORD_HERE@localhost:5432/rfqdb?schema=public&connection_limit=10"

# JWT Configuration (Generate a strong secret)
JWT_SECRET=GENERATE_A_64_CHARACTER_RANDOM_STRING_HERE
JWT_EXPIRES_IN=8h

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.yourmailserver.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=YOUR_SMTP_PASSWORD

# NextCloud Configuration
NEXTCLOUD_URL=https://nextcloud.yourdomain.com
NEXTCLOUD_USERNAME=rfq-system
NEXTCLOUD_PASSWORD=NEXTCLOUD_APP_PASSWORD
NEXTCLOUD_BASE_PATH=/RFQ-Production

# Logging Configuration
LOG_LEVEL=warn
LOG_DIR=C:\RFQSystem\logs

# Frontend URL
FRONTEND_URL=https://rfq.yourdomain.com

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://rfq.yourdomain.com

# Backup Configuration
BACKUP_PATH=C:\RFQBackups
BACKUP_RETENTION_DAYS=30

# SSL Configuration (if handling SSL in Node.js)
SSL_KEY_PATH=C:\certs\private.key
SSL_CERT_PATH=C:\certs\certificate.crt
SSL_CA_PATH=C:\certs\ca_bundle.crt