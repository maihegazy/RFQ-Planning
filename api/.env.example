# Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://rfquser:password@localhost:5432/rfqdb?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
